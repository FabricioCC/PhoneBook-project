<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
  <div class="row">

    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Contacts</h1>
      <p class="text-center lead">Create or edit your contacts below:</p>

      <%- include('includes/messages') %>

      <% if(contact._id){ %>
        <form class="form-contato" action="/contact/edit/<%= contact._id %>" method="POST">
      <% }else{ %>
        <form class="form-contato" action="/contact/register" method="POST">
      <% } %>

      
        <input type="hidden" name="_csrf" value=<%= csrfToken %> >
        <div class="mb-3">
          <label>Name</label>
          <input value="<%= contact.name %>" type="text" class="form-control" name="name">
        </div>

        <div class="mb-3">
          <label>Last name</label>
          <input value="<%= contact.lastname %>" type="text" class="form-control" name="lastname">
        </div>
        <div class="mb-3">
          <label>Email</label>
          <input value="<%= contact.email %>" type="email" class="form-control" name="email">
        </div>
        <div class="mb-3">
          <label>Phone</label>
          <input value="<%= contact.phone %>" type="tel" class="form-control" name="phone">
        </div>
        
        
        <button type="submit" class="btn btn-primary">Register Contact</button>
      </form>


    </div>

    <div class="col-lg-2"></div>

  </div>
</div>

<%- include('includes/footer') %>